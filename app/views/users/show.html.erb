<%= render 'layouts/sidebar' %>
<div class="col-md-8">
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td>
          <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book) do %>
            <% book.title %>
          <% end %>
        </td>
        <td>
            <%= book.body %>
        </td>
     </tr>
    <% end %>
  </tbody>
</table>
</div>
