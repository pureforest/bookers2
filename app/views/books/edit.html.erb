<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<h4>Title</h4>
  <%= f.text_field :title,class="col-lg-12" %>
<h4>Body</h4>
  <%= f.text_area :body, class="col-lg-12" %>
  <div>
  <%= f.submit 'Update Book', class="col-lg-12 btn btn-primary" %>
  </div>
  <%= link_to 'Show', book_path(@book.id) %>
  |
  <%= link_to 'Back', "/books" %>
<% end %>
