<div class="col-6 mx-auto">
 <h1>Editing Book</h1>

 <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
 <% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title,class: "col-lg-12" %>
 <h4>Body</h4>
  <%= f.text_area :body, class: "col-lg-12" %>
 <div>
  <%= f.submit 'Update Book', class: "col-lg-12 btn btn-primary" %>
 </div>
  <%= link_to 'Show', book_path(@book) %>
  |
  <%= link_to 'Back', "/books" %>
<% end %>
</div>
